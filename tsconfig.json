{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2020",
    "lib": ["es2015", "dom"],
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist/esm",
    "rootDir": "./src",
    "downlevelIteration": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  }
}
